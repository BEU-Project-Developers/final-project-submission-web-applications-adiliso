@model Construction.Areas.Manage.ViewModels.AddProjectViewModel

@{
    ViewBag.Title = "Create Project";
    var serviceList = ViewBag.ServiceList as List<Construction.Models.Service>;
}

<div class="container mt-4">
    <h2>Create Project</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProjectDate"></label>
            <input asp-for="ProjectDate" class="form-control" type="date" />
            <span asp-validation-for="ProjectDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Client"></label>
            <input asp-for="Client" class="form-control" />
            <span asp-validation-for="Client" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ServiceId">Service</label>
            <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceList">
                <option value="">Select a service</option>
            </select>
            <span asp-validation-for="ServiceId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Photos">Photos</label>
            <input name="Photos" id="Photos" class="form-control-file" type="file" multiple />
            <span asp-validation-for="Photos" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
