@model IEnumerable<Construction.Models.Project>

<div class="container">
    <h2>Projects List</h2>
    <table class="table table-bordered table-hover">
        <thead class="thead-light">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Service</th>
            <th>Client</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Id</td>
                <td>@project.Name</td>
                <td>@project.Service?.Name</td>
                <td>@project.Client</td>
                <td>
                    <a asp-action="Details" asp-controller="Project" asp-route-id="@project.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-controller="Project" asp-route-id="@project.Id" class="btn btn-warning btn-sm">Edit</a>
                    <form asp-action="Delete" asp-controller="Project" asp-route-id="@project.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this project?');" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <a asp-area="Manage" asp-controller="Project" asp-action="Create" class="btn btn-success mt-3">Add New Project</a>
</div>
