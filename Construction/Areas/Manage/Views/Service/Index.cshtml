@model IEnumerable<Construction.Models.Service>

<div class="container">
    <h2>Services List</h2>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Logo</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Id</td>
                <td>@service.Name</td>
                <td>@service.Description</td>
                <td><img src="~/img/services/@service.Logo" alt="Logo" width="50"/></td>
                <td>
                    <a asp-action="Edit" asp-controller="Service" asp-route-id="@service.Id" class="btn btn-warning btn-sm">Edit</a>
                    <form asp-action="Delete" asp-controller="Service" asp-route-id="@service.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this?');" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <a asp-area="Manage" asp-controller="Service" asp-action="Create" class="btn btn-success mt-3">Add New Service</a>
</div>