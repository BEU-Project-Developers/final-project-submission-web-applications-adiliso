@model Construction.Areas.Manage.ViewModels.AddServiceViewModel

@{
  Layout = "_AdminLayout";
}

<div class="content-wrapper">
  <div class="row">
    <div class="col-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Add Service</h4>

          @if (TempData["Success"] != null)
          {
            <div class="alert alert-success">@TempData["Success"]</div>
          }

          @Html.ValidationSummary(true, "", new { @class = "text-danger" })

          <form asp-area="Manage" asp-controller="Service" asp-action="AddService" method="post" enctype="multipart/form-data" class="forms-sample">
            <div class="form-group">
              <label asp-for="Name"></label>
              <input asp-for="Name" class="form-control" placeholder="Name" />
              <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
              <label asp-for="Description"></label>
              <textarea asp-for="Description" class="form-control" rows="4" placeholder="Description"></textarea>
              <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
              <label>Upload Logo</label>
              <input type="file" name="Logo" class="form-control-file" required />
            </div>

            <button type="submit" class="btn btn-primary me-2">Submit</button>
            <button type="reset" class="btn btn-light">Cancel</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>