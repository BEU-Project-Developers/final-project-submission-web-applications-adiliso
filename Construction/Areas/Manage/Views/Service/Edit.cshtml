@model Construction.Areas.Manage.ViewModels.EditServiceViewModel

<div class="content-wrapper">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Edit Service</h4>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <form asp-area="Manage" asp-controller="Service" asp-action="Edit" method="post" enctype="multipart/form-data" class="forms-sample">
                        @Html.HiddenFor(m => m.Id)

                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" placeholder="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Current Logo:</label><br />
                            @if (!string.IsNullOrEmpty(Model.ExistingLogo))
                            {
                                <img src="~/img/services/@Model.ExistingLogo" alt="Current Logo" style="max-height: 150px; border: 1px solid #ddd; padding: 5px;" />
                            }
                            else
                            {
                                <p>No logo uploaded.</p>
                            }
                        </div>

                        <div class="form-group">
                            <label>Upload New Logo (optional):</label>
                            <input type="file" asp-for="Logo" class="form-control-file" />
                        </div>

                        <button type="submit" class="btn btn-primary me-2">Save Changes</button>
                        <a asp-area="Manage" asp-controller="Service" asp-action="List" class="btn btn-light">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
